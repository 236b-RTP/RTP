<script type="text/template" id="reschedule_dialog_template">
  <div class="modal fade" id="rescheduleDialog" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <form class="form-inline">
          <div class="modal-header">
            <h4 class="modal-title">Task Checklist</h4>
          </div>

          <div class="modal-body">
            <p>
              The following tasks cannot be rescheduled because the due date has passed. Please mark each
              as complete or change the due date before rescheduling can complete.
            </p>
            <table class="table table-striped overdue-tasks">
              <thead>
                <tr>
                  <th>Task Name</th>
                  <th>Action</th>
                  <th>Due Date</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>

          <div class="modal-footer">
            <!-- buttons -->
            <%= button_tag 'Cancel', type: 'button', data: { dismiss: 'modal' }, class: 'btn btn-default btn-cancel' %>
            <%= submit_tag 'Reschedule', class: 'btn btn-primary', disabled: true %>
          </div>

        </form>
      </div>
    </div>
  </div>
</script>

<script type="text/template" id="reschedule_template">
  <td>
    <div class="task-tag-color" style="background-color: {{= model.get("item.tag_color") }};"></div>
    <div class="task-name">{{= model.trimmedTitle() }}</div>
  </td>
  <td>
    <label class="radio-inline"><input type="radio" name="action[{{= model.id }}]" value="completed" /> Completed</label>
    <label class="radio-inline"><input type="radio" name="action[{{= model.id }}]" value="due_date" /> Change Due Date</label>
  </td>
  <td>
    <div class="form-group has-feedback">
      <input type="text" class="form-control input-sm select-date" name="due_date" disabled="disabled" />
      <span class="glyphicon glyphicon-calendar form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
      <input type="time" class="form-control input-sm" name="due_time" disabled="disabled" />
      <span class="glyphicon glyphicon-time form-control-feedback"></span>
    </div>
  </td>
</script>