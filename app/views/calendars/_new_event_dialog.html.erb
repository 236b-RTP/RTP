<div class="modal fade" id="newEventDialog" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(@event, html: { class: "form-horizontal" }) do |f| %>
        <div class="modal-header">
          <h4 class="modal-title">New Event</h4>
        </div>
        <div class="modal-body">
          <!-- form -->
          <div class="form-group">
            <%= f.label(:title, 'Title:', class: 'control-label col-xs-2') %>
            <div class="col-xs-10">
              <%= f.text_field(:title, class: 'form-control', placeholder: 'Event name') %>
            </div>
          </div>

          <div class="form-group has-feedback">
            <%= label_tag('event[start_date]', 'Start:', class: 'control-label col-xs-2') %>
            <div class="col-xs-4">
              <%= text_field_tag('event[start_date]', nil, class: 'form-control select-date') %>
              <span class="glyphicon glyphicon-calendar form-control-feedback"></span>
            </div>

            <div class="col-xs-3">
              <%= time_field_tag('event[start_time]', nil, class: 'form-control') %>
            </div>
          </div>

          <div class="form-group has-feedback">
            <%= label_tag('event[end_date]', 'End:', class: 'control-label col-xs-2') %>
            <div class="col-xs-4">
              <%= text_field_tag('event[end_date]', nil, class: 'form-control select-date') %>
              <span class="glyphicon glyphicon-calendar form-control-feedback"></span>
            </div>

            <div class="col-xs-3">
              <%= time_field_tag('event[end_time]', nil, class: 'form-control') %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label(:description, 'Details:', class: 'control-label col-xs-2') %>
            <div class="col-xs-10">
              <%= f.text_area(:description, class: 'form-control', rows: '3') %>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <!-- buttons -->
          <%= button_tag 'Cancel', type: 'button', data: { dismiss: 'modal' }, class: 'btn btn-default' %>
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>