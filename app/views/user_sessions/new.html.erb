<% content_for :page_title, 'Sign in | ' %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1>Sign In</h1>
      </div>
      <%= render partial: 'shared/flash_messages' %>
      <%= form_tag(user_sessions_path) do %>
        <div class="form-group">
          <%= label_tag :email, 'Email address' %>
          <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Enter email' %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
        </div>
        <%= submit_tag 'Sign in', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>