<!-- begin header -->
<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag('rtp_logo_image.png', height: '40', width: '40'), root_path, class: 'navbar-brand' %>
      <%= link_to 'TaskCal', root_path, class: 'navbar-brand-text' %>
    </div>
    <div class="navbar-collapse collapse">
      <% if current_user.present? %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to('Calendar', calendars_path) %></li>
                <% if current_user.preference.present? %>
                    <li><%= link_to('Preferences', edit_user_preference_path(current_user, current_user.preference)) %></li>
                <% end %>
                <li><%= link_to('Account Settings', settings_path) %></li>
                <li><%= link_to('Help', help_path) %></li>
                <li class="divider"></li>
                <li><%= link_to('Sign Out', user_session_path(current_user_session), :'data-method' => 'delete', :rel => 'nofollow') %></li>
              </ul>
            </li>
          </ul>
      <% else %>
          <%= form_tag(user_sessions_path, class: 'navbar-form navbar-right', role: 'form') do %>
              <div class="form-group">
                <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
              </div>
              <div class="form-group">
                <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
              </div>
              <%= submit_tag 'Sign in', class: 'btn btn-success' %>
          <% end %>
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</div>
<!-- end header -->